<section class="mdl-grid">
  <div class="mdl-cell mdl-cell--4-col mdl-card mdl-shadow--2dp">
    <div class="mdl-card__title">
      <h2 class="mdl-card__title-text">Weight details</h2>
    </div>
    <form method="post" action="/upsert">
      {{#if weight}}
      <input type="hidden" name="id" value="{{weight.id}}" />
      {{/if}}
      <div class="mdl-card__supporting-text">
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label block">
          <input class="mdl-textfield__input" type="number" step="0.1" name="number" value="{{weight.number}}">
          <label class="mdl-textfield__label" for="sample1">Weight value...</label>
        </div>

        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label block">
          <input class="mdl-textfield__input" type="date" name="date" id="date" value="{{weight.date}}">
          <label class="mdl-textfield__label" for="sample1">Weight date...</label>
        </div>

        <!-- 
        {{#if weight}}
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label block">
          <input class="mdl-textfield__input" type="text" pattern="PENDING|SHIPPED|DELIVERED" name="status" value="{{weight.status}}">
          <label class="mdl-textfield__label" for="sample1">Status...</label>
          <span class="mdl-textfield__error">Must be one of PENDING, SHIPPED, or DELIVERED</span>
        </div>
        {{/if}}
        -->
      </div>
      <div class="mdl-card__actions">
        <button class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--colored mdl-button--raised">
          {{#if weight}}Save{{else}}Create{{/if}}
        </button>
        <a class="mdl-button mdl-js-button mdl-js-ripple-effect" href="/">Cancel</a>
      </div>
    </form>
  </div>
</section>
